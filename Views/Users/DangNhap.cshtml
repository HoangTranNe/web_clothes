@using do_an_web.Models
@model customer
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center">ĐĂNG NHẬP</h2>
<br />
<div class="row">
    <div class="offset-md-1 col-md-10">
        <h2 style="color: red;">@ViewBag.ThongBao</h2>
        @using (Html.BeginForm("DangNhap", "Users"))
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label for="dangnhap">Tên đăng nhập:</label>
                @Html.TextBox("name_customer", null, new
                {
                    @class = "form-control",
                    @id = "dangnhap",
                    required = "required"
                })
            </div>
            <div class="form-group">
                <label for="password">Mật khẩu:</label>
                @Html.Password("password_customer", null, new
                {
                    @class = "form-control",
                    @id = "password",
                    required = "required"
                })
            </div>
            <button type="submit" class="btn btn-success">ĐĂNG NHẬP</button>
            <button type="submit" class="btn btn-danger">
                <a href="@Url.Action("Register","Users")" style="text-decoration:none; color:white;">ĐĂNG KÝ</a>
            </button>
        }
    </div>
</div>

