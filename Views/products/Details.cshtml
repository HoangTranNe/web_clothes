@model do_an_web.Models.product
@using do_an_web.Models
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>THÔNG TIN CHI TIẾT SẢN PHẨM</h2>
<br />
<div class="row">
    <div class="offset-md-1 col-md-4">
        <img style="width: 100%;" src="~/Images/@Model.images" alt="">
    </div>
    <div class="col-md-6 details">
        <h3>Tên sách: @Model.name</h3>
        <div style="text-align: justify">
            <p style="font-weight: bold">
                Mô tả:
                <span>
                    Co_Chay®<br /><br />

                    Streetwear <br /><br />

                    Based in Saigon<br /><br />

                    Made in Vietnam<br /><br />

                    Hệ Thống Cửa Hàng<br /><br />

                    - CN 1: 445 Sư Vạn Hạnh, P.12, Q.10<br /><br />

                    - CN 2: 48 Trần Quang Diệu, P.14, Q.3<br /><br />

                    - CN 3: 463 Quang Trung, P.10, Q. Gò Vấp<br /><br />

                    - CN 4: 350 Điện Biên Phủ, P.17, Q. Bình Thạnh (GTOWN 1)<br /><br />

                    - CN 5: 136 Nguyễn Hồng Đào, P14, Q. Tân Bình (GTOWN 2)<br /><br />

                    - CN 6: TNP - 26 Lý Tự Trọng, P. Bến Nghé, Q.1.<br /><br />

                    - CN 7: TNP (Sense Market) - Đối Diện Số 90 Lê Lai, P. Bến Nghé, Q.1.<br /><br />

                    - CN 8: PG2-08 Shophouse Vincom, Đường 30/4, P.Xuân Khánh, Q. Ninh Kiều, Cần Thơ.<br /><br />

                    - CN 9: PG2-06 Shophouse Vincom, 1096 Phạm Văn Thuận, P. Tân Mai, TP. Biên Hoà.<br /><br />

                    Viet Street Culture x Streetwear<br /><br />

                    SIZE CHART<br /><br />
                </span>
                <img src="~/Content/Images-Title/pro_1_size.jpg" />
            </p> 
        </div>
        <p class="price">
            Giá bán: <span style="color:red; font-size:32px;">
                @String.Format("{0:0.00}",Model.price) VNĐ
        </span>

    </p>
    <a class="btn btn-primary" href="@Url.Action("addtocart", "cart", new{ id_products = Model.id_products })">
        Đặt mua
    </a>
</div>
</div>
@section scripts{
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.slider').slick({
                infinite: true,
                slidesToShow: 3,
                slidesToScroll: 3
            });
        })
    </script>
}
