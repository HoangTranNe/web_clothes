@using do_an_web.Models
@model List<needtobuy>
@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
    customer khach = Session["TaiKhoan"] as customer;
}

<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã sản phẩm</th>
            <th>Tên sản phẩm</th>
            <th>Ảnh sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var clothes in Model)
        {
            <tr>
                <td>@clothes.id_product</td>
                <td>@clothes.name</td>

                <td><img src="~/Images/@clothes.images" style="width:100%" /></td>
                <td>@clothes.quantity</td>
                <td>@String.Format("{0:0,0}", clothes.price)</td>
                <td>@String.Format("{0:0,0}", clothes.total())</td>
            </tr>
        }
        <tr style="font-weight:bold; text-align:right; color:red;">
            <td colspan="4">Tổng số lượng: @ViewBag.TongSL</td>
            <td colspan="5">Tổng tiền: @ViewBag.TongTien</td>
        </tr>
    </tbody>
</table>
<h2 style="text-align:center">THÔNG TIN KHÁCH HÀNG</h2>
<table class="table table-bordered">
    <tr>
        <td>Họ tên: </td>
        <td>@khach.name_customer</td>
    </tr>
    <tr>
        <td>Địa chỉ: </td>
        <td>@khach.address_customer</td>
    </tr>
    <tr>
        <td>Điện thoại: </td>
        <td>@khach.phone_customer</td>
    </tr>
    <tr>
        <td>Ngày đặt: </td>
        <td>@DateTime.Now.ToShortDateString()</td>
    </tr>
    <tr>
        <td colspan="2" style="text-align: center;">
            @Html.ActionLink("ĐỒNG Ý ĐẶT HÀNG", "DongYDatHang", null, new {@class = "btn btn - primary" })
        </td>
    </tr>
</table>

