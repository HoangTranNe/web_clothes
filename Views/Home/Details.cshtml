@using do_an_web.Models
@model product
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>THÔNG TIN CHI TIẾT SẢN PHẨM</h2>
<br />
<div class="row">
    <div class="offset-md-1 col-md-4">
        <img style="width: 100%;" src="~/Content/Images/@Model.images" alt="">
        <img style="width: 100%;" src="~/Content/Images-Title/@Model.images_size" alt="">
    </div>
    <div class="col-md-6 details">
        <h3>Tên sách: @Model.name</h3>
        <p style="text-align: justify">
            <span style="font-weight: bold">Mô tả:</span> @Model.descibe
        </p>
        <p class="price">
            Giá bán: <span style="color:red; font-size:32px;">@Model.price VNĐ</span>
        </p>
    </div>
</div>

