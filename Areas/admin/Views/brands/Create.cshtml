@model do_an_web.Models.brand

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/admin/Views/Shared/admin_Layout.cshtml";
}


<section class="vh-a bg-image"
         style="background-image: url('https://previews.123rf.com/images/skunkeye/skunkeye1512/skunkeye151200169/49352963-ganja-weed-marijuana-seamless-vector-pattern-background.jpg');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2>TẠO HÃNG</h2>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    <h4>Brand</h4>
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.name_brand, htmlAttributes: new { @class = "control-label col-md-3" })
                                        <div class="col-md-12">
                                            @Html.EditorFor(model => model.name_brand, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.name_brand, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-12">
                                            <input type="submit" value="Tạo" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                            }

                            <div>
                                @Html.ActionLink("QUAY LẠI DANH SÁCH", "Index", null, new {@class="btn btn-success"})
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>